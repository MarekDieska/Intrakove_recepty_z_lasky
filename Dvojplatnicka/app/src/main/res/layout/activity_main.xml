<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context=".MainActivity">

    <!-- ExoPlayer View -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true" />

    <!-- ScrollView for the content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/player_view"
        android:fillViewport="true"
        android:layout_marginBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ConstraintLayout inside the ScrollView -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/custom_toolbar" />

                <!-- TextView for menu header -->
                <TextView
                    android:id="@+id/textViewHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu:\n"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- TextView to display text -->
                <TextView
                    android:id="@+id/startText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KrÃ¡sny deÅˆ na varenie dobrÃ½ch jedÃ¡l"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/textViewHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"/>

                <!-- Button Grid Layout -->
                <GridLayout
                    android:id="@+id/categoryGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:columnCount="3"
                    android:rowCount="1"
                    app:layout_constraintTop_toBottomOf="@id/startText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:id="@+id/predjedla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸœ"
                        android:textSize="32sp"
                        android:textColor="@android:color/white"
                        android:onClick="handleCategoryButtonClick" />

                    <Button
                        android:id="@+id/hlavne_jedla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ"
                        android:textSize="32sp"
                        android:textColor="@android:color/white"
                        android:onClick="handleCategoryButtonClick" />

                    <Button
                        android:id="@+id/dezerty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ°"
                        android:textSize="32sp"
                        android:textColor="@android:color/white"
                        android:onClick="handleCategoryButtonClick" />

                </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- RecyclerView for the list of items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>


    <GridLayout
        android:id="@+id/shoppingListGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“"
            android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:onClick="confirmShoppingListClick"/>

        <Button
            android:id="@+id/shoppingListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“œ"
            android:textSize="30sp"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/transparent"
            android:onClick="shoppingListClick"
            android:alpha="0.7"/>

        <Button
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ—"
            android:textSize="24sp"
            android:textColor="@android:color/holo_red_light"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:onClick="removeShoppingListClick"/>

    </GridLayout>

    <ImageButton
        android:id="@+id/likedButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:contentDescription="@string/showliked"
        android:text=""
        android:src="@drawable/liked_button"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_alignTop="@id/shoppingListGrid"/>



    <!-- SpÃ¤Å¥ Button (Initially Hidden) -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SpÃ¤Å¥"
        android:textSize="18dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:onClick="handleBackButtonClick" />

</RelativeLayout>
