<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ExoPlayer View -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/custom_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_layout"
        android:layout_marginTop="65dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/menuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:layout_marginTop="15dp"
            android:textSize="32sp"
            android:fontFamily="@font/lobster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:ignore="NotSibling" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@id/menuText"
            app:layout_constraintTop_toTopOf="@id/menuText"
            android:contentDescription="obrazok"
            android:src="@drawable/dvojplatnicka_logo"
            android:visibility="visible">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainView"
        android:layout_alignTop="@id/menu_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize">


            <!-- Button Grid Layout -->
            <GridLayout
                android:id="@+id/categoryGrid"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:columnCount="3"
                android:rowCount="1"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/menu_layout"
                tools:ignore="NotSibling">

                <Button
                    android:id="@+id/predjedla"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/transparent_bg_colored"
                    android:onClick="handleCategoryButtonClick"
                    android:tag="predjedlá"
                    android:text="🍜"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/hlavne_jedla"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/transparent_bg_colored"
                    android:onClick="handleCategoryButtonClick"
                    android:tag="hlavné jedlá"
                    android:text="🍝"
                    android:textSize="32sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/dezerty"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/transparent_bg_colored"
                    android:onClick="handleCategoryButtonClick"
                    android:tag="dezerty"
                    android:text="🍰"
                    android:textSize="32sp" />
            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- ScrollView for the content -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/constraintLayout"
            android:fillViewport="true"
            android:layout_marginBottom="75dp"
            tools:ignore="NotSibling">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ConstraintLayout inside the ScrollView -->

                <!-- RecyclerView for the list of items -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="visible"

                    />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <GridLayout
        android:id="@+id/shoppingListGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✗"
            android:textSize="24sp"
            android:textColor="@android:color/holo_red_light"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:onClick="removeShoppingListClick"/>


        <Button
            android:id="@+id/shoppingListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📜"
            android:textSize="30sp"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/transparent"
            android:onClick="shoppingListClick"
            android:alpha="0.7"/>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓"
            android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:onClick="confirmShoppingListClick"/>

    </GridLayout>

    <ImageButton
        android:id="@+id/likedButton"
        android:tag="obľúbené"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:contentDescription="@string/showliked"
        android:scaleType="fitCenter"
        android:src="@drawable/like_button"
        android:text="" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Späť"
        android:textSize="18dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:onClick="handleBackButtonClick" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/settings_menu"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:layout_marginBottom="20dp"
            android:text="♫"
            app:layout_constraintBottom_toBottomOf="@id/settings_menu"
            app:layout_constraintEnd_toStartOf="@id/sound_bar">

        </TextView>

        <SeekBar
            android:id="@+id/sound_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:thumbTint="?attr/colorPrimary"
            android:progressTint="?attr/colorPrimary"
            android:max="100"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/settings_menu">

        </SeekBar>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/fontsize_picker"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:solidColor="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/sound_bar"
            app:layout_constraintEnd_toEndOf="@id/sound_bar"
            app:layout_constraintBottom_toTopOf="@id/sound_bar">
        </NumberPicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="60dp"
            android:text="✑"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toStartOf="@id/fontsize_picker"
            app:layout_constraintBottom_toTopOf="@id/sound_bar">

        </TextView>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:id="@+id/theme_switch"
                android:thumbTint="?attr/colorPrimaryVariant"
                android:trackTint="?attr/colorPrimary"
                app:layout_constraintBottom_toTopOf="@id/radioGroup"
                app:layout_constraintEnd_toEndOf="parent">
            </Switch>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="☽"
            app:layout_constraintTop_toTopOf="@id/theme_switch"
            app:layout_constraintEnd_toStartOf="@id/theme_switch"
            tools:ignore="NotSibling">

        </TextView>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@id/fontsize_picker">

            <!-- First option -->
            <RadioButton
                android:id="@+id/radio_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="2x2" />

            <!-- Second option -->
            <RadioButton
                android:id="@+id/radio_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="3x3" />

            <!-- Third option -->
            <RadioButton
                android:id="@+id/radio_option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="4x4" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_menu"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone">

        <EditText
            android:id="@+id/shopping_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/android:textColor"
            android:textColorHint="?attr/android:textColor"
            android:hint="Tu si môžeš písať svoj nákupný zoznam"
            app:layout_constraintTop_toTopOf="@id/shopping_menu">

        </EditText>

    </ScrollView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_menu"
        android:layout_marginTop="115dp"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/ingredients_menu">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_text"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="26sp"
                android:fontFamily="@font/dancing_script">
            </TextView>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_menu"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_text"
                android:textSize="26sp"
                android:fontFamily="@font/dancing_script">
            </TextView>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>


